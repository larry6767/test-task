{
  "name": "test-task",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "git@github.com:larry6767/test-task.git",
  "author": "Larry Glebov <larry.glebov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "server": "cross-env NODE_PATH=./src nodemon --watch src -e ts --exec ts-node src/index.ts",
    "client": "yarn --cwd ./client run serve",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "build": "tsc",
    "start": "cross-env NODE_PATH=./dist node dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.19",
    "nodemon": "^2.0.2",
    "socket.io": "^2.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.1",
    "@types/socket.io": "^2.1.4",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "prettier": "1.19.1"
  }
}
